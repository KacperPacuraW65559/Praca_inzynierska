<%- include("../partials/head", { title: "Edytuj profil" }) %>
<body>
    <%- include("../partials/navbar", { user }) %>

    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary fw-bold">Edytuj profil</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body">
                        <form action="/profile/edit" method="post" class="row g-3">

                            <div class="col-md-6">
                                <label for="nameControl" class="form-label">Imię:</label>
                                <input type="text" id="nameControl" name="name" class="form-control" value="<%= user.name %>" required>
                            </div>

                            <div class="col-md-6">
                                <label for="surnameControl" class="form-label">Nazwisko:</label>
                                <input type="text" id="surnameControl" name="surname" class="form-control" value="<%= user.surname %>" required>
                            </div>

                            <div class="col-12">
                                <label for="emailControl" class="form-label">Email:</label>
                                <input type="email" id="emailControl" name="email" class="form-control" value="<%= user.email %>" required>
                            </div>

                            <div class="col-md-6">
                                <label for="passwordControl" class="form-label">Nowe hasło (opcjonalnie):</label>
                                <input type="password" id="passwordControl" name="password" class="form-control">
                            </div>

                            <div class="col-md-6">
                                <label for="confirmPasswordControl" class="form-label">Potwierdź nowe hasło:</label>
                                <input type="password" id="confirmPasswordControl" name="confirmPassword" class="form-control">
                            </div>

                            <div class="col-md-6">
                                <label for="addressControl" class="form-label">Adres:</label>
                                <input type="text" id="addressControl" name="address" class="form-control" value="<%= user.address %>">
                            </div>

                            <div class="col-md-6">
                                <label for="ageControl" class="form-label">Wiek:</label>
                                <input type="number" id="ageControl" name="age" class="form-control" max="100" value="<%= user.age %>">
                            </div>

                            <div class="col-12 text-center mt-3">
                                <button type="submit" class="btn btn-primary w-100">Zapisz zmiany</button>
                                <a href="/profile/view" class="btn btn-outline-secondary w-100 mt-2">Anuluj</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" 
    crossorigin="anonymous"></script>
    
</body>
</html>
