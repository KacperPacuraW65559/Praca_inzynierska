<%- include("../partials/head", { title: "Edytuj Użytkownika" }) %>
<body>
    <%- include("../partials/navbar", { user }) %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h3 class="text-center text-primary mb-4">Edytuj Użytkownika</h3>

                        <form action="/admin/users/<%= editUser.id %>/edit" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="nameControl" class="form-label">Imię:</label>
                                    <input type="text" id="nameControl" name="name" class="form-control" value="<%= editUser.name %>" required>
                                </div>

                                <div class="col-md-6">
                                    <label for="surnameControl" class="form-label">Nazwisko:</label>
                                    <input type="text" id="surnameControl" name="surname" class="form-control" value="<%= editUser.surname %>" required>
                                </div>

                                <div class="col-12">
                                    <label for="emailControl" class="form-label">Email:</label>
                                    <input type="email" id="emailControl" name="email" class="form-control" value="<%= editUser.email %>">
                                </div>

                                <div class="col-12">
                                    <label for="passwordControl" class="form-label">Nowe Hasło (opcjonalnie):</label>
                                    <input type="password" id="passwordControl" name="password" class="form-control">
                                </div>

                                <div class="col-12">
                                    <label for="confirmPasswordControl" class="form-label">Potwierdź Nowe Hasło:</label>
                                    <input type="password" id="confirmPasswordControl" name="confirmPassword" class="form-control">
                                </div>

                                <div class="col-md-6">
                                    <label for="addressControl" class="form-label">Adres:</label>
                                    <input type="text" id="addressControl" name="address" class="form-control" value="<%= editUser.address %>">
                                </div>

                                <div class="col-md-6">
                                    <label for="ageControl" class="form-label">Wiek:</label>
                                    <input type="number" id="ageControl" name="age" class="form-control" max="100" value="<%= editUser.age %>">
                                </div>

                                <div class="col-12">
                                    <label for="roleControl" class="form-label">Rola:</label>
                                    <select id="roleControl" name="role" class="form-select" required>
                                        <option value="admin" <%= editUser.role === 'admin' ? 'selected' : '' %>>Administrator</option>
                                        <option value="teacher" <%= editUser.role === 'teacher' ? 'selected' : '' %>>Nauczyciel</option>
                                        <option value="student" <%= editUser.role === 'student' ? 'selected' : '' %>>Student</option>
                                    </select>
                                </div>

                                <div class="col-12 text-center mt-4">
                                    <button type="submit" class="btn btn-primary w-100">Zapisz Zmiany</button>
                                </div>
                            </div>
                        </form>

                        <div class="text-center mt-3">
                            <a href="/admin/users" class="btn btn-secondary w-100">Anuluj</a>
                        </div>

                        <div class="text-center mt-3">
                            <form action="/admin/users/<%= editUser.id %>/delete" method="post"
                                onsubmit="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">
                                <button type="submit" class="btn btn-danger w-100">Usuń Użytkownika</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" 
    crossorigin="anonymous"></script>
    
</body>
</html>
