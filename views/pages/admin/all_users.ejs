<%- include("../partials/head", { title: "Wszyscy Użytkownicy" }) %>
<body>
    <%- include("../partials/navbar", { user }) %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h3 class="text-center text-primary mb-4">Wszyscy Użytkownicy</h3>

                        <div class="d-flex justify-content-center gap-2 mb-3">
                            <a href="/admin/dashboard" class="btn btn-secondary">Powrót do Panelu</a>
                            <a href="/users/add" class="btn btn-primary">Dodaj Użytkownika</a>
                        </div>

                        <div class="mb-4">
                            <h5 class="text-primary">Administratorzy</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Imię i Nazwisko</th>
                                            <th>Email</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% admins.forEach((admin, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= admin.name %> <%= admin.surname %></td>
                                                <td><%= admin.email %></td>
                                                <td class="text-center">
                                                    <a href="/admin/users/<%= admin.id %>/edit" class="btn btn-warning btn-sm">Edytuj</a>
                                                    <a href="/admin/users/<%= admin.id %>/view" class="btn btn-info btn-sm">Pokaż</a>
                                                    <form action="/admin/users/<%= admin.id %>/delete" method="post" class="d-inline-block" onsubmit="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">
                                                        <button class="btn btn-danger btn-sm">Usuń</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="text-primary">Nauczyciele</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Imię i Nazwisko</th>
                                            <th>Email</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% teachers.forEach((teacher, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= teacher.name %> <%= teacher.surname %></td>
                                                <td><%= teacher.email %></td>
                                                <td class="text-center">
                                                    <a href="/admin/users/<%= teacher.id %>/edit" class="btn btn-warning btn-sm">Edytuj</a>
                                                    <a href="/admin/users/<%= teacher.id %>/view" class="btn btn-info btn-sm">Pokaż</a>
                                                    <form action="/admin/users/<%= teacher.id %>/delete" method="post" class="d-inline-block" onsubmit="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">
                                                        <button class="btn btn-danger btn-sm">Usuń</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div>
                            <h5 class="text-primary">Studenci</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Imię i Nazwisko</th>
                                            <th>Email</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% students.forEach((student, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= student.name %> <%= student.surname %></td>
                                                <td><%= student.email %></td>
                                                <td class="text-center">
                                                    <a href="/admin/users/<%= student.id %>/edit" class="btn btn-warning btn-sm">Edytuj</a>
                                                    <a href="/admin/users/<%= student.id %>/view" class="btn btn-info btn-sm">Pokaż</a>
                                                    <form action="/admin/users/<%= student.id %>/delete" method="post" class="d-inline-block" onsubmit="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">
                                                        <button class="btn btn-danger btn-sm">Usuń</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="/admin/dashboard" class="btn btn-secondary">Powrót do Panelu</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" 
    crossorigin="anonymous"></script>
    
</body>
</html>
